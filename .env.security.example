# Security Configuration Environment Variables
# Copy this file to .env and configure with your actual values

# Core Security Keys (Required)
JWT_SECRET=your-256-bit-jwt-secret-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here
FIELD_ENCRYPTION_KEY=your-field-level-encryption-key-here

# Session Security
SESSION_SECRET=your-session-secret-key-here
CSRF_SECRET=your-csrf-secret-key-here

# Database Security
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DB_SSL_CERT_PATH=/path/to/ssl/cert.pem
DB_SSL_KEY_PATH=/path/to/ssl/key.pem

# External API Keys (Secure)
GEMINI_API_KEY=your-gemini-api-key-here
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Third-party Services
EMAIL_API_KEY=your-email-service-api-key
SMS_API_KEY=your-sms-service-api-key
WEBHOOK_SECRET=your-webhook-secret-key

# Security Configuration
RATE_LIMIT_REDIS_URL=redis://localhost:6379
BLOCKED_IPS=192.168.1.100,10.0.0.5
KNOWN_IPS=127.0.0.1,::1

# Monitoring and Alerting
LOG_WEBHOOK_URL=https://your-logging-service.com/webhook
LOG_WEBHOOK_TOKEN=your-log-webhook-token
SECURITY_WEBHOOK_URL=https://your-security-monitoring.com/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-slack-webhook

# Environment
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Optional Security Features
ENABLE_2FA=true
ENABLE_IP_GEOLOCATION=true
ENABLE_BOT_DETECTION=true
ENABLE_THREAT_INTELLIGENCE=false
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000
PASSWORD_RESET_EXPIRY=3600000